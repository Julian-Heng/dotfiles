[bar/bar]
bottom = true
width = 100%
height = 18
radius = 0.0
fixed-center = false
separator = " "

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 0

font-0 = inconsolata:size=10;3

modules-left = bspwm
modules-right = cpu mem disk bat net date

cursor-click = pointer
cursor-scroll = ns-resize


[colors]
background = #1d1f21
foreground = #c5c8c6


[module/bspwm]
type = custom/script
exec = bash ~/.dotfiles/polybar/polybar_bspwm
content-padding = 1
tail = true
interval = 0.1


[module/cpu]
type = custom/script
exec = bash ~/.dotfiles/polybar/polybar_cpu
content-padding = 1
tail = true


[module/mem]
type = custom/script
exec = bash ~/.dotfiles/scripts/info/show_mem --format "[ Mem: {} ]" mem_percent
content-padding = 1
tail = true


[module/disk]
type = custom/script
exec = bash ~/.dotfiles/scripts/info/show_disk --format "[ Disk: {} ]" disk_percent
content-padding = 1
tail = true


[module/bat]
type = custom/script
exec = bash ~/.dotfiles/polybar/polybar_bat
content-padding = 1
tail = true


[module/net]
type = custom/script
exec = bash ~/.dotfiles/scripts/info/show_net --format "[ {} ]" network_ssid
content-padding = 1
tail = true


[module/date]
type = internal/date
interval = 2
label = %time%
time = [ %a, %d %h | %H:%M ]
