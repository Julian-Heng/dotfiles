##################
##### colors #####
##################
# shellcheck disable=2034,2148

bold=$'\e[1m'
reset=$'\e[0m'

for i in {0..7}; do
    printf -v f[$i] "%b" "\\e[3${i}m"
    printf -v b[$i] "%b" "\\e[4${i}m"
    printf -v fb[$i] "%s" "${f[$i]}${bold}"
    printf -v bb[$i] "%s" "${b[$i]}${bold}"
done
