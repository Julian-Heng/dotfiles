##################
##### colors #####
##################
# shellcheck disable=2034,2148

bold=$'\e[1m'
reset=$'\e[0m'

for i in {0..7}; do
    printf -v "f[$i]"  $'\e[3'"$i"'m'
    printf -v "b[$i]"  $'\e[4'"$i"'m'
    printf -v "fb[$i]" $'\e[1m\e[3'"$i"'m'
    printf -v "bb[$i]" $'\e[1m\e[4'"$i"'m'
done
