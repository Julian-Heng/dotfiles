[url "ssh://git@gitlab.com/"]
    insteadOf = gitlab://

[url "ssh://git@github.com/"]
    insteadOf = github://

[url "https://www.gitlab.com/"]
    insteadOf = gitlab-https://

[url "https://www.github.com/"]
    insteadOf = github-https://

[color "branch"]
    current = white reverse
    local = white
    remote = blue

[color "diff"]
    meta = yellow bold
    frag = cyan bold

[color "status"]
    added = yellow
    changed = green
